<div class="container">
    <h2 class="text-center">Actualizar - Tarea</h2>
    <div class="row">
        <div class="card col-md-4 mx-auto pt-3">
            <form action="/task/edit/{{task._id}}" method="POST" >
                <div class="form-group ">
                    <label for="title"><strong>T&iacute;tulo</strong></label>
                    <input class="form-control bg-dark text-white" type="text" name="title" id="title" value="{{task.title}}" />
                </div>
                <div class="form-group">
                    <label for="description"><strong>Descripci&oacute;n</strong></label>
                    <textarea class="form-control bg-dark text-white" name="description" id="description" cols="30" rows="4">{{task.description}}</textarea>
                </div>
                <div class="form-group">
                    <label for="done"><strong>Marca Tarea como:</strong></label>
                    <select class="form-control bg-dark text-white" name="done" id="done">
                        <option value="false">Pendiente</option>
                        <option value="true">Completada</option>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary form-control" type="submit">Editar</button>
                </div>
            </form>
        </div>
    </div>
</div>